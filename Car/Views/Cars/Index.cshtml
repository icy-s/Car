@model IEnumerable<Car.Models.Cars.CarsIndexViewModel>

<div>
    <a asp-action="create" asp-controller="cars" type="submit" class="btn btn-primary">Create</a>
</div>

<div class="h1">
    Cars
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Make</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">Mileage</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var cars in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@cars.Make</td>
                    <td>@cars.Model</td>
                    <td>@cars.Year</td>
                    <td>@cars.Mileage</td>
                    <td>
                        <a asp-action="details" asp-controller="cars" asp-route-id="@cars.Id" class="btn btn-primary">Details</a>
                        <a asp-action="update" asp-controller="cars" asp-route-id="@cars.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="cars" asp-route-id="@cars.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</form>